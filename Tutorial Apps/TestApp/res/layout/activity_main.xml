<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <EditText
        android:id="@+id/myed1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/mybtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/radioGroup1"
        android:layout_marginRight="107dp"
        android:layout_marginTop="51dp"
        android:text="Result" />

    <RadioGroup
        android:id="@+id/radioGroup1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/myed1"
        android:layout_marginTop="46dp"
        android:orientation="vertical" >

        <RadioButton
            android:id="@+id/myrdsquare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/myed1"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="22dp"
            android:text="Square" />

        <RadioButton
            android:id="@+id/myrdfact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myrdsquare"
            android:layout_below="@+id/myrdsquare"
            android:layout_marginTop="24dp"
            android:text="Factorial" />

        <RadioButton
            android:id="@+id/myrdcube"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/myrdfact"
            android:layout_below="@+id/myrdfact"
            android:layout_marginTop="32dp"
            android:text="Cube" />
    </RadioGroup>

</RelativeLayout>